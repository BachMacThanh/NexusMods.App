<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:NexusMods.App.UI.Controls;assembly=NexusMods.App.UI"
                    xmlns:icons="clr-namespace:NexusMods.Icons;assembly=NexusMods.Icons"
                    x:ClassModifier="internal">
    <Design.PreviewWith>
        <Border Padding="16">
            <StackPanel Spacing="8" Orientation="Horizontal">
                <StackPanel Spacing="8">
                    <Button Content="Click Me!" />
                    <Button Content="Click Me!" />
                    <controls:StandardButton Text="Default" />
                    <controls:StandardButton Text="Both Icons" ShowIcon="Both" />
                    <controls:StandardButton Text="Medium" ShowIcon="Both" Size="Medium" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Primary-Strong" ShowIcon="Right" Type="Primary" Fill="Strong" />
                    <controls:StandardButton Text="Primary-Strong" ShowIcon="Right" Type="Primary" Fill="Strong"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Primary-Weak" ShowIcon="Right" Type="Primary" Fill="Weak" />
                    <controls:StandardButton Text="Primary-Weak" ShowIcon="Right" Type="Primary" Fill="Weak"
                                             IsEnabled="False" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Secondary-Strong" ShowIcon="Right" Type="Secondary" Fill="Strong" />
                    <controls:StandardButton Text="Secondary-Strong" ShowIcon="Right" Type="Secondary" Fill="Strong"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Secondary-Weak" ShowIcon="Right" Type="Secondary" Fill="Weak" />
                    <controls:StandardButton Text="Secondary-Weak" ShowIcon="Right" Type="Secondary" Fill="Weak"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Secondary-None" ShowIcon="Right" Type="Secondary" Fill="None" />
                    <controls:StandardButton Text="Secondary-None" ShowIcon="Right" Type="Secondary" Fill="None"
                                             IsEnabled="False" />
                </StackPanel>

                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Tertiary-Weak" ShowIcon="Right" Type="Tertiary" Fill="Weak" />
                    <controls:StandardButton Text="Tertiary-Weak" ShowIcon="Right" Type="Tertiary" Fill="Weak"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Primary-WeakAlt" ShowIcon="Right" Type="Tertiary" Fill="WeakAlt" />
                    <controls:StandardButton Text="Primary-WeakAlt" ShowIcon="Right" Type="Tertiary" Fill="WeakAlt"
                                             IsEnabled="False" />
                    <controls:StandardButton Text="Tertiary-None" ShowIcon="Right" Type="Tertiary" Fill="None" />
                    <controls:StandardButton Text="Tertiary-None" ShowIcon="Right" Type="Tertiary" Fill="None"
                                             IsEnabled="False" />
                </StackPanel>
                <StackPanel Spacing="8">
                    <controls:StandardButton Text="Extra Small" Size="ExtraSmall" ShowIcon="None" />
                    <controls:StandardButton Text="Extra Small" Size="ExtraSmall" ShowIcon="Right" Type="Tertiary"
                                             Fill="WeakAlt" />
                    <controls:StandardButton Text="Extra Small" Size="ExtraSmall" ShowIcon="Both" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

