            </Style>

            <Style Selector="^ TextBlock#PART_Label">
                <Setter Property="Theme" Value="{StaticResource BodyLGNormalTheme}" />
            </Style>
        </Style>

        <!-- icon only variants -->

        <Style Selector="^[ShowIcon=IconOnly]">

